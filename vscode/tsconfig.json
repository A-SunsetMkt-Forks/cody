{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false, // sourcemaps come from esbuild/vite
    "rootDir": ".",
    "outDir": "dist/tsc",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "src",
    "src/commands/execute/cody.json",
    "playwright.config.ts",
    "webviews",
    "webviews/*.d.ts",
    "package.json",
    ".storybook/*.ts"
  ],
  "exclude": [
    "scripts",
    "dist",
    "**/test-data",
    "vite.config.ts",
    "webviews/vite.config.ts"
  ],
  "references": [
    {
      "path": "../lib/shared"
    },
    {
      "path": "../lib/ui"
    }
  ]
}
